<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.noakev.frontend.logged_in.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_homeFragment_to_otherProfilesFragment"
            app:destination="@id/otherProfilesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_logInActivity"
            app:destination="@id/logInActivity" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.noakev.frontend.logged_in.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_profileFragment_to_otherProfilesFragment"
            app:destination="@id/otherProfilesFragment" />
        <action
            android:id="@+id/action_profileFragment_to_logInActivity"
            app:destination="@id/logInActivity" />
    </fragment>
    <fragment
        android:id="@+id/postFragment"
        android:name="com.noakev.frontend.logged_in.post.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" >
        <action
            android:id="@+id/action_postFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_postFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_postFragment_to_logInActivity"
            app:destination="@id/logInActivity" />
    </fragment>
    <fragment
        android:id="@+id/otherProfilesFragment"
        android:name="com.noakev.frontend.logged_in.profile.OtherProfilesFragment"
        android:label="fragment_other_profiles"
        tools:layout="@layout/fragment_other_profiles" >
        <action
            android:id="@+id/action_otherProfilesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <activity
        android:id="@+id/logInActivity"
        android:name="com.noakev.frontend.logged_out.LogInActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" >
    </activity>
</navigation>